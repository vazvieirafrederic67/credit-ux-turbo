<div data-controller="carousel" id="carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div style="background-image:url({{ dataCarousel.1.image }})" class="d-block w-100">
        <div class="carousel-content-outer">
          <div class="carousel-content-inner">
            {% if dataCarousel.1.title is defined %}
              <h1 class="title {% if color is defined %} {{ color }} {% endif %}">{{ dataCarousel.1.title }}</h1>
            {% endif %}
            {% if dataCarousel.1.text is defined %}
