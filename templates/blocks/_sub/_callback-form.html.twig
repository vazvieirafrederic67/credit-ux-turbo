<turbo-frame id="form_contact" class="form_contact">
  <div class="callback-form">
      <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="section-heading">
                <h2>Prenons contact <em>ensembles</em></h2>
                <span>Formulaire pour une demande d'information</span>
              </div>
            </div>
            <div class="col-md-12">
              <div class="contact-form">
                {{ form_start(form) }}
                  <div class="row">

                    <div class="col-lg-6 col-md-12 col-sm-12">
                      <fieldset>
                        {{ form_row(form.lastname) }}
                      </fieldset>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                      <fieldset>
                        {{ form_row(form.firstname) }}
                      </fieldset>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12">
                      <fieldset>
                        {{ form_row(form.phonenumber) }}
                      </fieldset>
                    </div>

                    <div class="col-lg-6 col-md-12 col-sm-12">
                      <fieldset>
                        {{ form_row(form.email) }}
                      </fieldset>
                    </div>

                    <div class="col-lg-12">
                      <fieldset>
                        {{ form_row(form.message) }}
                      </fieldset>
                    </div>
                    <div class="col-lg-12">
                      <fieldset>
                        <button type="submit" id="form-submit" class="border-button">Envoyer</button>
                      </fieldset>
                    </div>
                  </div>
                {{ form_end(form) }}
              </div>
            </div>
          </div>
      </div>
  </div>
</turbo-frame>