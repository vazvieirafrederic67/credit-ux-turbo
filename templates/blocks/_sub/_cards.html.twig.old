<!-- Cards -->

<div {% if classe is defined %} class="{{ classe }}" {% endif %}>
    <div class="container-cards-details">

        {% for card in dataCards %}
            <div  class="card_info">

                <div style="background-image:url( {{ card.image }} )" class="container-image"></div>

                <div class="container-detail">
                    <h4>{{ card.title }} </h4> 
                    <p>{{ card.text }} </p> 
                </div>
                
            </div>
         {% endfor %}
     
    </div>
</div>