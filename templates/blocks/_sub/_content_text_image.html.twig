<div {% if classe is defined %} class="{{ classe }}" {% endif %}>

     <div class="more-info about-info">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="more-info-content">
              <div class="row">
                <div class="col-md-12 col-lg-6 align-self-center">
                  <div class="right-content">

                    {% if dataTextImage.title is defined %}
                        <h3>{{ dataTextImage.title|raw }}</h3>
                    {% endif %}

                    {% if dataTextImage.text is defined %}
                        <p>{{ dataTextImage.text }}</p>
                    {% endif %}

                    {% if dataTextImage.button is defined %}
                        {% include 'partials/_button.html.twig' with { 'button' : dataTextImage.button , 'link' : dataTextImage.link}  %}
                    {% endif %}

                  </div>
                </div>
                <div class="col-md-12 col-lg-6">
                  <div class="left-image">
                    {% if dataTextImage.image is defined %}
                        <div class="image" style="background-image: url({{ dataTextImage.image }})"></div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>