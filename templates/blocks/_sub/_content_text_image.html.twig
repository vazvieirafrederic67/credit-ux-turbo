<div {% if classe is defined %} class="{{ classe }}" {% endif %}>

    <!-- Promo Section - "We know design" -->
    <div id="text_image" class="container">
        <div class="row">
            <div class="col-md-12 col-lg-6">
                {% if dataTextImage.title is defined %}
                    <h3>{{ dataTextImage.title }}</h3>
                {% endif %}

                {% if dataTextImage.text is defined %}
                    <p>{{ dataTextImage.text }}</p>
                {% endif %}
                
                {% if dataTextImage.button is defined %}
                        {% include 'partials/_button.html.twig' with { 'button' : dataTextImage.button }  %}
                {% endif %}

            </div>
            <div class="col-md-12 col-lg-6">
                {% if dataTextImage.image is defined %}
                    <div class="image" style="background-image: url({{ dataTextImage.image }})" alt="Buildings"></div>
                {% endif %}
            </div>
        </div>
    </div>

</div>