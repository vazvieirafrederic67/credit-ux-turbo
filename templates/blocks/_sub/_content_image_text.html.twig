<div {% if classe is defined %} class={{ classe }} {% endif %}>

    <div class="more-info">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="more-info-content">
              <div class="row">

                <div class="col-md-12 col-lg-6">
                  <div class="left-image">
                    <div class="col-12">
                        {% if dataImageText.image is defined %}
                            <div class="w3-image w3-round-large image" style="background-image: url({{ dataImageText.image }})" alt="Buildings"></div>
                        {% endif %}
                    </div>
                  </div>
                </div>
                <div class="col-md-12 col-lg-6 align-self-center">
                  <div class="right-content">
                    
                    {% if dataImageText.title is defined %}
                        <h3>{{ dataImageText.title|raw }}</h3>
                    {% endif %}
                    
                    {% if dataImageText.text is defined %}
                        <p>{{ dataImageText.text }}</p>
                    {% endif %}

                    {% if dataImageText.button is defined %}
                        {% include 'partials/_button.html.twig' with { 'button' : dataImageText.button }  %}
                    {% endif %}
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>