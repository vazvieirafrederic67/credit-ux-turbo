{% extends 'admin_base.html.twig' %}

{% block title %}Duree index{% endblock %}

{% block body %}


    <div id="container-main">

        <div class="menu">
            <a href="{{ path('duree_new') }}">Create new</a>
        </div>

        <div class="content">
        
             <h1>Duree index</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>Mensualite</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for duree in durees %}
                    <tr>
                        <td>{{ duree.mensualite }}</td>
                        <td>
                            <a href="{{ path('duree_show', {'id': duree.id}) }}">show</a>
                            <a href="{{ path('duree_edit', {'id': duree.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
   
{% endblock %}
